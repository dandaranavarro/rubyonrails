<p id="notice"><%= notice %></p>

<h1>Fornecedors</h1>

<table class="table table-striped" data-toggle="table" data-pagination="true" data-search="true">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.name %></td>
        <td><%= fornecedor.address %></td>
        <td><%= link_to 'Show', fornecedor, :class => 'btn btn-default btn-xs'%></td>
        <td><%= link_to 'Edit', edit_fornecedor_path(fornecedor), :class => 'btn btn-default btn-xs' %>
</td>
        <td><%= link_to 'Destroy', fornecedor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs btn-danger' %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fornecedor', new_fornecedor_path, :class => 'btn btn-primary' %>
