<p id="notice"><%= notice %></p>

<h1>Carros</h1>

<table style="border: 1px solid black; "  data-toggle="table" data-pagination="true" data-search="true">
  <thead>
    <tr>
      <th>Name</th>
      <th>Marca</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carros.each do |carro| %>
      <tr>
        <td><%= carro.name %></td>
        <td><%= carro.marca %></td>
        <td><%= link_to 'Show', carro %></td>
        <td><%= link_to 'Edit', edit_carro_path(carro) %></td>
        <td><%= link_to 'Destroy', carro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

