<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table class="table table-striped" data-toggle="table" data-pagination="true" data-search="true">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ativo</th>
      <th>Nascimento</th>
      <th>Cadastro</th>
      <th>Altura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.ativo %></td>
        <td><%= cliente.nascimento %></td>
        <td><%= cliente.cadastro %></td>
        <td><%= cliente.altura %></td>
        <td><%= link_to 'Show', cliente, :class => 'btn btn-default btn-xs'%></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente), :class => 'btn btn-default btn-xs' %>
</td>
        <td><%= link_to 'Destroy', cliente, :class => 'btn btn-default btn-xs btn-danger' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cliente', new_cliente_path, :class => 'btn btn-primary' %>
